---
const { icon, title, description } = Astro.props;
import ShadowButtom from "./ShadowButtom.astro";
---


<div
  class="flex flex-col items-center justify-center w-full max-w-sm p-3 sm:p-4 md:p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-105 z-10"
>
  {
    icon && (
      <div class="mb-2 sm:mb-3 md:mb-4">
        <img
          src={icon}
          alt={title}
          class="w-auto h-12 sm:h-16 md:h-20 object-contain"
          loading="lazy"
        />
      </div>
    )
  }
  <h3 class="text-sm sm:text-base md:text-lg font-semibold text-gray-950 mb-1 sm:mb-2 text-center leading-tight">{title}</h3>
  <p class="text-gray-800 text-xs sm:text-sm text-center mb-2 sm:mb-3 md:mb-4 leading-relaxed">{description}</p>
</div>

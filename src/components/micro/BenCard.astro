---
const { icon, title, description } = Astro.props;
import ShadowButtom from "./ShadowButtom.astro";
---


<div
  class="flex flex-col items-center justify-center w-full max-w-sm p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-105 z-10"
>
  {
    icon && (
      <div class="mb-4">
        <img
          src={icon}
          alt={title}
          class="w-auto h-20 object-contain"
          loading="lazy"
        />
      </div>
    )
  }
  <h3 class="text-lg font-semibold text-gray-950 mb-2">{title}</h3>
  <p class="text-gray-800 text-sm text-center mb-4">{description}</p>
</div>
